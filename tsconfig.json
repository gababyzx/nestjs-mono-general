{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@lib/test": [
        "libs/test/src"
      ],
      "@lib/test/*": [
        "libs/test/src/*"
      ],
      "@lib/share": [
        "libs/share/src"
      ],
      "@lib/share/*": [
        "libs/share/src/*"
      ]
    }
  }
}